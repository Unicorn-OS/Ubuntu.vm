---
- name: Resize Disk
  command: "qemu-img resize {{ libvirt_pool_dir }}/{{ vm_name }}.qcow2 64G"

- name: Resize in vm
  command: |
    virt-customize -a {{ libvirt_pool_dir }}/{{ vm_name }}.qcow2 \
    --run-command 'growpart /dev/vda 1 && \
    resize2fs /dev/vda1'

#    --install cloud-initramfs-growroot
